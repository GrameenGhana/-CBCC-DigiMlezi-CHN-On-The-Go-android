<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:padding="@dimen/padding_medium"
        android:id="@+id/course_context_reset">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_refresh_grey_500_24dp"
            android:scaleType="fitCenter"
            android:tint="@color/white"
            android:background="@drawable/dialog_rounded_button"
            android:padding="@dimen/padding_medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_context_reset"
            android:id="@+id/textView3"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/ContextMenuText"
            android:layout_marginLeft="@dimen/range_tick_label_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/padding_medium"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:id="@+id/course_context_update_activity">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView3"
            android:tint="@color/white"
            android:src="@drawable/ic_file_download_grey_500_24dp"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_rounded_button"
            android:padding="@dimen/padding_medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_context_update_activity"
            android:id="@+id/textView4"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/ContextMenuText"
            android:layout_marginLeft="@dimen/range_tick_label_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:padding="@dimen/padding_medium"
        android:id="@+id/course_context_delete">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_delete_grey_500_24dp"
            android:tint="@color/white"
            android:scaleType="fitCenter"
            android:background="@drawable/dialog_rounded_button"
            android:padding="@dimen/padding_medium"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_context_delete"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/ContextMenuText"
            android:layout_marginLeft="@dimen/range_tick_label_font_size"/>
    </LinearLayout>
</LinearLayout>