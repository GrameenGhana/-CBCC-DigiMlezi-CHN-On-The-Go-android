<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/sub_section_layout"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing_half"
        >

        <ImageView
            android:id="@+id/sub_section_item_logo"
            android:layout_width="@dimen/sub_sections_image_size"
            android:layout_height="@dimen/sub_sections_image_size"
            android:layout_alignParentLeft="true"
            android:src="@drawable/no_image_2"/>





        <TextView
            android:id="@+id/sub_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Section Name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_toRightOf="@id/sub_section_item_logo"
            android:textColor="@android:color/primary_text_light"
            />


    </RelativeLayout>










</android.support.v7.widget.CardView>