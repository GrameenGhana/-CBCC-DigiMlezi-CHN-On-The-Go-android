<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topic_layout"
    android:background="?attr/selectableItemBackground"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_half"
        >

        <ImageView
            android:id="@+id/topic_logo"
            android:layout_width="@dimen/topics_image_size"
            android:layout_height="@dimen/topics_image_size"
            android:src="@drawable/ic_local_hospital_grey_500_48dp"
            android:tint="@color/colorAccent"
            />


        <ImageView
            android:id="@+id/topic_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_download_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_half"
            android:tint="#b1b1b1"
            />



        <TextView
            android:layout_toRightOf="@id/topic_logo"
            android:id="@+id/topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_half"
            android:maxLines="2"
            android:layout_marginRight="@dimen/spacing_2"
            android:text="Topic Name"
            android:textColor="@android:color/primary_text_light"
            />




    </RelativeLayout>



</android.support.v7.widget.CardView>