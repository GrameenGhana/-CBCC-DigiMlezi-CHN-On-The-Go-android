    <style name="Highlight.Separator" parent="android:Widget">
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">@color/highlight_separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

    <style name="Highlight.Text" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
